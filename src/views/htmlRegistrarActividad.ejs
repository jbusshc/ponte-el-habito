<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/RegistrarActividadStyle.css">
</head>
<body>
    <%- include('partial/_header') %> <!-- Incluir el header -->

    <main id="contenido">
        <h1>Registrar Actividad</h1>

        <form id="register-activity-form">
            <label for="habitoId">Seleccione un hábito:</label>
            <select id="habitoId">
                <option value="" disabled selected>Seleccione un hábito</option>
                <% habitos.forEach(habito => { %>
                    <option value="<%= habito.HABITO_ID %>,<%= habito.HABITO_IDT %>">
                        <%= habito.HABITO_NOM %>
                    </option>
                <% }) %>
            </select>

            <div class="form-group">
                <label for="fecha">Fecha:</label>
                <input type="date" id="fecha" name="fecha" required>
            </div>

            <div id="habito-cuantitativo" style="display:none;">
                <label for="cantidad">Cantidad realizada:</label>
                <input type="number" id="cantidad" name="cantidad" required >
            </div>
            <div id="habito-binario" style="display:none;"">
                <label for="binaro">Logrado:</label>
                <select id="binario" name="binario" required ">
                    <option value="" disabled selected>Seleccione una opción</option>
                    <option value="1">Sí</option>
                    <option value="0">No</option>
                </select>
            </div>

            <div class="button-group">
                <button type="submit" class="btn-confirm">Registrar</button>
                <button type="button" class="btn-back" onclick="window.location.href='/';">Volver</button>
            </div>
        </form>
    </main>

    <script src="/js/registrarActividad.js"></script>
</body>
</html>
