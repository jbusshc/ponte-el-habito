<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/modificarObjetivosStyle.css">
    
    <!-- Incluir CSS de Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <%- include('partial/_header') %>  <!-- Incluir el header -->
    
    <main>
        <h1>Modificar Objetivo</h1>
        
        <!-- Formulario para modificar un objetivo -->
        <form id="modify-objective-form">
            <label for="objective-listbox">Seleccione un objetivo para modificar:</label>
            <select id="objective-listbox" name="objective-listbox">
                <option value="" disabled selected>Seleccione un objetivo</option>
                <% objetivos.forEach(objetivo => { %>
                    <option value="<%= objetivo.OBJETIVO_ID%>"><%=objetivo.OBJETIVO_NOM%></option>
                <% }) %>
            </select>

                <label for="nuevo-nombre">Nombre del objetivo:</label>
                <input type="text" id="nuevo-nombre" name="ruleName" style="display: block;" placeholder="Nombre del objetivo...">

                <input type="text" id="repeticiones" name="cantidad" style="display: block;" placeholder="Cantidad de repeticiones" required>
            
                <label for="fecha-inicial">Fecha Inicio:</label>
                <input type="date" id="fecha-inicial" name="fechaInicial" required>
                    <br><br>
                <label for="fecha-final">Fecha Final:</label>
                <input type="date" id="fecha-final" name="fechaFinal" required>
                <br><br>

                <label for="habit-list">Seleccionar hábito:</label>
                <select id="habit-list" name="habitList[]" required>
                    <!-- Aquí irán las opciones de hábitos -->
                <% habitos.forEach(habito => { %>
                    <option value="<%= habito.HABITO_ID %>"><%= habito.HABITO_NOM %></option>
                <% }) %>
                </select>

            <button type="submit" class="btn-confirm">Aceptar</button>
            <button type="button" class="btn-back" onclick="window.location.href='/gestor-habitos';">Volver</button>
        </form>
    </main>


    <script src="/js/modificarReglas.js"></script>
    <!-- Incluir jQuery y Select2 -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#habit-list').select2({
                tags: false,
                placeholder: "Selecciona un hábito",
                allowClear: true
            });
        });
    </script>

</body>
</html>
